---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Cognitogram Labs">
  <main class="hero">
    <h1>Cognitogram Labs</h1>
    <p class="tagline">Research towards understanding and simulating the complete architecture of mind.</p>
    
    <div class="links">
      <a href="/about">About →</a>
      <a href="/blog">Blog →</a>
    </div>
  </main>
</Layout>

<style>
  .hero {
    min-height: calc(100vh - 200px);
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 4rem 3rem;
    max-width: 720px;
    margin: 0 auto;
  }

  h1 {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 400;
    letter-spacing: -0.02em;
    margin-bottom: 1.5rem;
    line-height: 1.1;
  }

  .tagline {
    font-size: 1.25rem;
    color: var(--text-muted);
    max-width: 480px;
    margin-bottom: 3rem;
  }

  .links {
    display: flex;
    gap: 2rem;
  }

  .links a {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--text-muted);
  }

  .links a:hover {
    color: var(--text);
  }

  @media (max-width: 640px) {
    .hero {
      padding: 3rem 1.5rem;
    }
  }
</style>
