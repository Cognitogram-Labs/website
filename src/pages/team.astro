---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Team — Cognitogram Labs">
  <main class="team">
    <header>
      <p class="breadcrumb"><a href="/">~</a>/team</p>
      <h1>Team</h1>
      <p class="subhead">The people building Cognitogram Labs.</p>
    </header>

    <section class="grid">
      <article class="card">
        <div class="avatar">
          <picture>
            <source srcset="/team/sam.webp" type="image/webp" />
            <img src="/team/sam.png" alt="Sam Fatehmanesh" width="320" height="320" loading="lazy" />
          </picture>
        </div>
        <div class="meta">
          <h2>Sam Fatehmanesh</h2>
          <a class="site" href="https://samfv.systems" rel="me noopener noreferrer" target="_blank">samfv.systems →</a>
        </div>
      </article>

      <article class="card">
        <div class="avatar">
          <picture>
            <source srcset="/team/sudarsh.webp" type="image/webp" />
            <img src="/team/sudarsh.png" alt="Sudarsh Kunnavakkam" width="320" height="320" loading="lazy" />
          </picture>
        </div>
        <div class="meta">
          <h2>Sudarsh Kunnavakkam</h2>
          <a class="site" href="https://sudarsh.com" rel="me noopener noreferrer" target="_blank">sudarsh.com →</a>
        </div>
      </article>
    </section>
  </main>
</Layout>

<style>
  .team {
    min-height: calc(100vh - 200px);
    padding: 6rem 3rem;
    max-width: 720px;
    margin: 0 auto;
  }

  header {
    margin-bottom: 3.5rem;
  }

  .breadcrumb {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--text-muted);
    margin-bottom: 0.75rem;
  }

  .breadcrumb a {
    color: var(--text-muted);
  }

  .breadcrumb a:hover {
    color: var(--text);
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 400;
    letter-spacing: -0.02em;
  }

  .subhead {
    margin-top: 0.75rem;
    color: var(--text-muted);
    font-size: 1.1rem;
    max-width: 40ch;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 1.25rem;
  }

  .card {
    border: 1px solid var(--border);
    border-radius: 14px;
    padding: 1.25rem;
    background: color-mix(in srgb, var(--bg) 94%, var(--text) 6%);
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .avatar {
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid var(--border);
    aspect-ratio: 1 / 1;
    background: #0a0a0c;
  }

  .avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .meta h2 {
    font-size: 1.25rem;
    font-weight: 400;
    letter-spacing: -0.01em;
    margin-bottom: 0.25rem;
  }

  .site {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--text-muted);
    border-bottom: 1px solid var(--border);
    padding-bottom: 2px;
    width: fit-content;
  }

  .site:hover {
    color: var(--text);
    border-color: var(--text-muted);
  }

  @media (max-width: 720px) {
    .grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 640px) {
    .team {
      padding: 4rem 1.5rem;
    }
  }
</style>

