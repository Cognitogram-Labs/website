---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Team — Cognitogram Labs">
  <main class="team">
    <header>
      <p class="breadcrumb"><a href="/">~</a>/team</p>
      <h1>Team</h1>
      <p class="subhead">The people building Cognitogram Labs.</p>
    </header>

    <section class="grid">
      <article class="card">
        <div class="avatar">
          <picture>
            <source srcset="/team/sam.webp" type="image/webp" />
            <img src="/team/sam.png" alt="Sam Fatehmanesh" width="320" height="320" loading="lazy" />
          </picture>
        </div>
        <div class="meta">
          <h2>Sam Fatehmanesh</h2>
          <div class="links">
            <a class="site" href="https://samfv.systems" rel="me noopener noreferrer" target="_blank">samfv.systems →</a>
            <a
              class="icon-link"
              href="https://www.linkedin.com/in/sam-fatehmanesh-3871a8195/"
              rel="noopener noreferrer"
              target="_blank"
              aria-label="Sam on LinkedIn"
              title="LinkedIn"
            >
              <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.604 0 4.267 2.371 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 1 1 0-4.124 2.062 2.062 0 0 1 0 4.124zM6.764 20.452H3.91V9h2.854v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.727v20.545C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.273V1.727C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          </div>
        </div>
      </article>

      <article class="card">
        <div class="avatar">
          <picture>
            <source srcset="/team/sudarsh.webp" type="image/webp" />
            <img src="/team/sudarsh.png" alt="Sudarsh Kunnavakkam" width="320" height="320" loading="lazy" />
          </picture>
        </div>
        <div class="meta">
          <h2>Sudarsh Kunnavakkam</h2>
          <div class="links">
            <a class="site" href="https://sudarsh.com" rel="me noopener noreferrer" target="_blank">sudarsh.com →</a>
            <a
              class="icon-link"
              href="https://www.linkedin.com/in/sudarsh-k-630902247/"
              rel="noopener noreferrer"
              target="_blank"
              aria-label="Sudarsh on LinkedIn"
              title="LinkedIn"
            >
              <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.604 0 4.267 2.371 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 1 1 0-4.124 2.062 2.062 0 0 1 0 4.124zM6.764 20.452H3.91V9h2.854v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.727v20.545C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.273V1.727C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          </div>
        </div>
      </article>
    </section>

    <p class="section-label">Advisors</p>

    <section class="grid advisors-grid">
      <article class="card">
        <div class="avatar">
          <img src="/team/matt-thomson.jpg" alt="Matt Thomson" width="320" height="320" loading="lazy" />
        </div>
        <div class="meta">
          <h2>Matt Thomson</h2>
          <p class="role">Caltech Thomson Lab</p>
        </div>
      </article>

      <article class="card">
        <div class="avatar">
          <img src="/team/david-prober.avif" alt="David Prober" width="320" height="320" loading="lazy" />
        </div>
        <div class="meta">
          <h2>David Prober</h2>
          <p class="role">Caltech Prober Lab</p>
        </div>
      </article>
    </section>
  </main>
</Layout>

<style>
  .team {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 2rem 3rem;
    max-width: 640px;
    margin: 0 auto;
    width: 100%;
  }

  header {
    margin-bottom: 2rem;
  }

  .breadcrumb {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--text-muted);
    margin-bottom: 0.75rem;
  }

  .breadcrumb a {
    color: var(--text-muted);
  }

  .breadcrumb a:hover {
    color: var(--text);
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 400;
    letter-spacing: -0.02em;
  }

  .subhead {
    margin-top: 0.75rem;
    color: var(--text-muted);
    font-size: 1.1rem;
    max-width: 40ch;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  .section-label {
    margin: 2.75rem 0 1rem;
    font-family: var(--font-mono);
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.18em;
    color: var(--text-muted);
    opacity: 0.6;
    text-align: center;
  }

  .advisors-grid {
    justify-items: center;
  }

  .advisors-grid .card {
    width: min(100%, 180px);
  }

  .card {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .avatar {
    border-radius: 10px;
    overflow: hidden;
    aspect-ratio: 1 / 1;
  }

  .avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .meta h2 {
    font-size: 1.15rem;
    font-weight: 400;
    letter-spacing: -0.01em;
    margin-bottom: 0.25rem;
  }

  .role {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  .site {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--text-muted);
  }

  .links {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .icon-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    border-radius: 6px;
    color: var(--text-muted);
    border: 1px solid var(--border);
  }

  .icon-link:hover {
    color: var(--text);
    border-color: var(--text-muted);
  }

  .site:hover {
    color: var(--text);
  }

  @media (max-width: 520px) {
    .grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 640px) {
    .team {
      padding: 2rem 1.5rem;
    }
  }
</style>
